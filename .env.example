# HomeHub Environment Variables
# Copy this file to .env and update with your values

# Flask Secret Key - Generate a random string for production
# You can generate one with: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change_this_secret_key_in_production

# Vaultwarden Configuration
# If using Vaultwarden, set these to your external URLs
VAULTWARDEN_URL=http://homehub-vaultwarden:80
VAULTWARDEN_DOMAIN=http://localhost:8080
VAULTWARDEN_SIGNUPS_ALLOWED=true
VAULTWARDEN_INVITATIONS_ALLOWED=true

# Radicale Sync Interval (seconds)
RADICALE_SYNC_INTERVAL=300
